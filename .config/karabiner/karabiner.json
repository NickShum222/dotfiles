{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Macbook Keyboard",
      "devices": [{ "identifiers": { "is_built_in_keyboard": true } }],
      "complex_modifications": {
        "parameters": {
          "basic.to_if_held_down_threshold_milliseconds": 200,
          "basic.to_delayed_action_delay_milliseconds": 60,
          "basic.to_if_held_down_trigger_on_other_key_down": true
        },
        "rules": [
          {
            "description": "Disable number row",
            "manipulators": [
              { "type": "basic", "from": { "key_code": "1" }, "to": [] },
              { "type": "basic", "from": { "key_code": "2" }, "to": [] },
              { "type": "basic", "from": { "key_code": "3" }, "to": [] },
              { "type": "basic", "from": { "key_code": "4" }, "to": [] },
              { "type": "basic", "from": { "key_code": "5" }, "to": [] },
              { "type": "basic", "from": { "key_code": "6" }, "to": [] },
              { "type": "basic", "from": { "key_code": "7" }, "to": [] },
              { "type": "basic", "from": { "key_code": "8" }, "to": [] },
              { "type": "basic", "from": { "key_code": "9" }, "to": [] },
              { "type": "basic", "from": { "key_code": "0" }, "to": [] },

              { "type": "basic", "from": { "key_code": "!" }, "to": [] },
              { "type": "basic", "from": { "key_code": "@" }, "to": [] },
              { "type": "basic", "from": { "key_code": "#" }, "to": [] },
              { "type": "basic", "from": { "key_code": "$" }, "to": [] },
              { "type": "basic", "from": { "key_code": "%" }, "to": [] },
              { "type": "basic", "from": { "key_code": "^" }, "to": [] },
              { "type": "basic", "from": { "key_code": "&" }, "to": [] },
              { "type": "basic", "from": { "key_code": "*" }, "to": [] },
              { "type": "basic", "from": { "key_code": "(" }, "to": [] },
              { "type": "basic", "from": { "key_code": ")" }, "to": [] }
            ]
          },
          {
            "description": "Right Command Mapping",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "right_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "set_variable": { "name": "num_layer", "value": 1 } }],
                "to_after_key_up": [
                  { "set_variable": { "name": "num_layer", "value": 0 } }
                ],
                "to_if_alone": [{ "key_code": "return_or_enter" }]
              }
            ]
          },
          {
            "description": "Hold Right Command (num_layer) + ASDFGHJKL; & QWERTYUIOP → Numbers 1–0 & Symbols",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "a" },
                "to": [{ "key_code": "1" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "s" },
                "to": [{ "key_code": "2" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "d" },
                "to": [{ "key_code": "3" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "f" },
                "to": [{ "key_code": "4" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "g" },
                "to": [{ "key_code": "5" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "h" },
                "to": [{ "key_code": "6" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "j" },
                "to": [{ "key_code": "7" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "k" },
                "to": [{ "key_code": "8" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "l" },
                "to": [{ "key_code": "9" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "semicolon" },
                "to": [{ "key_code": "0" }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "q" },
                "to": [{ "key_code": "1", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "w" },
                "to": [{ "key_code": "2", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "e" },
                "to": [{ "key_code": "3", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "r" },
                "to": [{ "key_code": "4", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "t" },
                "to": [{ "key_code": "5", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "y" },
                "to": [{ "key_code": "6", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "u" },
                "to": [{ "key_code": "7", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "i" },
                "to": [{ "key_code": "8", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "o" },
                "to": [{ "key_code": "9", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "p" },
                "to": [{ "key_code": "0", "modifiers": ["left_shift"] }],
                "conditions": [
                  { "type": "variable_if", "name": "num_layer", "value": 1 }
                ]
              }
            ]
          },

          {
            "description": "Disable Enter key and map right_command to Enter",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "return_or_enter",
                  "modifiers": { "optional": ["any"] }
                },
                "to": []
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "right_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [
                  {
                    "key_code": "return_or_enter"
                  }
                ]
              }
            ]
          },
          {
            "description": "Disable Escape button",
            "manipulators": [
              {
                "from": {
                  "key_code": "escape",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Caps Lock → Left Control",
            "manipulators": [
              {
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "left_control" }],
                "to_if_alone": [{ "key_code": "escape" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Hold Right Shift + HJKL for Scroll",
            "manipulators": [
              {
                "type": "basic",
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "mandatory": ["right_shift"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "horizontal_wheel": -32
                    }
                  }
                ]
              },
              {
                "type": "basic",
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "h",
                  "modifiers": {
                    "mandatory": ["right_shift"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "horizontal_wheel": 32
                    }
                  }
                ]
              },
              {
                "type": "basic",
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "mandatory": ["right_shift"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "vertical_wheel": 32
                    }
                  }
                ]
              },
              {
                "type": "basic",
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "mandatory": ["right_shift"],
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "vertical_wheel": -32
                    }
                  }
                ]
              }
            ]
          },
          {
            "description": "Hold Control + HJKL for Arrow keys",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "h",
                  "modifiers": {
                    "mandatory": ["left_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "left_arrow" }],
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com\\.mitchellh\\.ghostty$",
                      "^md\\.obsidian$"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "mandatory": ["left_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "down_arrow" }],
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com\\.mitchellh\\.ghostty$",
                      "^md\\.obsidian$"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "mandatory": ["left_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "up_arrow" }],
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com\\.mitchellh\\.ghostty$",
                      "^md\\.obsidian$"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "mandatory": ["left_control"],
                    "optional": ["any"]
                  }
                },
                "to": [{ "key_code": "right_arrow" }],
                "type": "basic"
              }
            ]
          }
        ]
      },
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
    }
  ]
}
